<div class="row">
  <div class="col-lg-8">
    <%# Plant Details Card %>
    <div class="card mb-4">
      <div class="card-header bg-primary text-white">
        <h1 class="card-title mb-0 h3"><%= @plant.name %></h1>
      </div>
      <div class="card-body">
        <dl class="row mb-0">
          <dt class="col-sm-3">Variety:</dt>
          <dd class="col-sm-9"><%= @plant.variety %></dd>

          <dt class="col-sm-3">Sowing method:</dt>
          <dd class="col-sm-9">
            <%= sowing_method_badge(@plant.sowing_method) %>
          </dd>

          <% if @plant.notes.present? %>
            <dt class="col-sm-3">Notes:</dt>
            <dd class="col-sm-9"><%= simple_format(@plant.notes, class: "mb-0") %></dd>
          <% end %>
        </dl>
      </div>
    </div>

    <%# Timing Information Card %>
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="card-title mb-0">Planting Timeline</h5>
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <% if @plant.plant_seeds_offset_days.present? %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><strong>Plant seeds:</strong></span>
              <span class="badge bg-primary rounded-pill">
                <%= format_offset(@plant.plant_seeds_offset_days) %>
              </span>
            </li>
          <% end %>

          <% if @plant.hardening_offset_days.present? %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><strong>Begin hardening off:</strong></span>
              <span class="badge bg-info rounded-pill">
                <%= format_offset(@plant.hardening_offset_days) %>
              </span>
            </li>
          <% end %>

          <% if @plant.plant_seedlings_offset_days.present? %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><strong>Transplant seedlings:</strong></span>
              <span class="badge bg-success rounded-pill">
                <%= format_offset(@plant.plant_seedlings_offset_days) %>
              </span>
            </li>
          <% end %>
        </ul>

        <div class="mt-3">
          <%= button_to "Regenerate tasks", regenerate_tasks_plant_path(@plant),
                method: :post,
                class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>

    <%# Tasks Table (if @tasks exists) %>
    <% if defined?(@tasks) && @tasks.any? %>
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">Tasks</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th scope="col">Due Date</th>
                  <th scope="col">Task Type</th>
                </tr>
              </thead>
              <tbody>
                <% @tasks.each do |task| %>
                  <tr>
                    <td><%= task.due_date.to_fs(:long) %></td>
                    <td><span class="badge bg-secondary"><%= task.task_type.humanize %></span></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>

    <%# Action Buttons %>
    <div class="d-flex gap-2 mb-4">
      <%= link_to "Edit Plant", edit_plant_path(@plant), class: "btn btn-primary" %>
      <%= link_to "Delete Plant", plant_path(@plant),
            class: "btn btn-outline-danger",
            data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this plant and all its tasks?" } %>
      <%= link_to "Back to Plants", plants_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <%# Sidebar %>
  <div class="col-lg-4">
    <div class="card bg-light">
      <div class="card-body">
        <h5 class="card-title">Quick Tips</h5>
        <p class="card-text small text-muted">
          Tasks are automatically generated based on your frost date and planting timeline.
          Update the timing information above and regenerate tasks to see changes.
        </p>
      </div>
    </div>
  </div>
</div>
