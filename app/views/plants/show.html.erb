<div class="row">
  <div class="col-lg-8">
    <%# Plant Details Card %>
    <div class="card mb-4">
      <div class="card-header bg-primary text-white">
        <h1 class="card-title mb-0 h3">
          <%= @plant.name %>
          <% if @plant.muted? %>
            <span class="badge bg-secondary ms-2 fs-6">Muted</span>
          <% end %>
        </h1>
      </div>
      <div class="card-body">
        <dl class="row mb-0">
          <dt class="col-sm-3">Variety:</dt>
          <dd class="col-sm-9"><%= @plant.variety %></dd>

          <dt class="col-sm-3">Sowing method:</dt>
          <dd class="col-sm-9">
            <%= sowing_method_badge(@plant.sowing_method) %>
          </dd>

          <% if @plant.days_to_sprout.present? %>
            <dt class="col-sm-3">Days to sprout:</dt>
            <dd class="col-sm-9"><%= format_days_to_sprout(@plant.days_to_sprout) %></dd>
          <% end %>

          <% if @plant.seed_depth.present? %>
            <dt class="col-sm-3">Seed depth:</dt>
            <dd class="col-sm-9"><%= format_seed_depth(@plant.seed_depth) %></dd>
          <% end %>

          <% if @plant.plant_spacing.present? %>
            <dt class="col-sm-3">Plant spacing:</dt>
            <dd class="col-sm-9"><%= format_plant_spacing(@plant.plant_spacing) %></dd>
          <% end %>

          <% if @plant.notes.present? %>
            <dt class="col-sm-3">Notes:</dt>
            <dd class="col-sm-9"><%= simple_format(@plant.notes, class: "mb-0") %></dd>
          <% end %>
        </dl>
      </div>
    </div>

    <%# Tasks Table (if @tasks exists) %>
    <% if defined?(@tasks) && @tasks.any? %>
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">Tasks</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-sm table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th scope="col" style="width: 180px;">Actions</th>
                  <th scope="col">Due Date</th>
                  <th scope="col">Task Type</th>
                  <th scope="col">Timeline</th>
                </tr>
              </thead>
              <tbody>
                <% @tasks.each do |task| %>
                  <%
                    # Get the offset for this task type
                    offset = case task.task_type
                    when "plant_seeds"
                      @plant.plant_seeds_offset_days
                    when "observe_sprouts"
                      # Calculate combined offset: plant_seeds + days_to_sprout
                      sprout_days = @plant.send(:parse_earliest_sprout_days)
                      if sprout_days && @plant.plant_seeds_offset_days
                        @plant.plant_seeds_offset_days + sprout_days
                      else
                        nil
                      end
                    when "begin_hardening_off"
                      @plant.hardening_offset_days
                    when "plant_seedlings"
                      @plant.plant_seedlings_offset_days
                    else
                      nil
                    end
                  %>
                  <tr data-controller="task-status"
                      data-task-status-task-id-value="<%= task.id %>"
                      data-task-status-status-value="<%= task.status %>"
                      data-task-status-target="row">

                    <td>
                      <div class="d-flex flex-column flex-md-row gap-2 align-items-start align-items-md-center task-actions-mobile">
                        <div class="form-check form-check-inline mb-0">
                          <input class="form-check-input"
                                 type="checkbox"
                                 id="complete-<%= task.id %>"
                                 data-task-status-target="completeCheckbox"
                                 data-action="change->task-status#toggleComplete"
                                 <%= 'checked' if task.status_done? %>
                                 <%= 'disabled' if task.status_skipped? %>
                                 title="Mark as complete">
                          <label class="form-check-label text-success" for="complete-<%= task.id %>">
                            ✓
                          </label>
                        </div>

                        <div class="form-check form-check-inline mb-0">
                          <input class="form-check-input"
                                 type="checkbox"
                                 id="skip-<%= task.id %>"
                                 data-task-status-target="skipCheckbox"
                                 data-action="change->task-status#toggleSkip"
                                 <%= 'checked' if task.status_skipped? %>
                                 <%= 'disabled' if task.status_done? %>
                                 title="Mark as skipped">
                          <label class="form-check-label text-secondary" for="skip-<%= task.id %>">
                            ⊘
                          </label>
                        </div>
                      </div>
                    </td>

                    <td><%= task.due_date.to_fs(:long) %></td>
                    <td>
                      <span class="badge d-inline-flex align-items-center" style="background-color: <%= task_badge_color(task)[:bg] %>; color: <%= task_badge_color(task)[:text] %>">
                        <%= task_icon_tag(task.task_type, size: "14px").html_safe %>
                        <%= task.task_type.humanize %>
                      </span>
                    </td>
                    <td>
                      <% if offset.present? %>
                        <span class="badge bg-success rounded-pill">
                          <%= format_offset(offset) %>
                        </span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <div class="mt-3">
            <%= button_to "Regenerate tasks", regenerate_tasks_plant_path(@plant),
                  method: :post,
                  class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    <% end %>

    <% if @plant.muted? %>
      <div class="alert alert-warning mb-4" role="alert">
        <strong>This plant is muted.</strong> Its tasks are hidden from the calendar and task list.
        <%= button_to "Unmute", unmute_plant_path(@plant), method: :patch, class: "btn btn-sm btn-success ms-2" %>
      </div>
    <% end %>

    <%# Action Buttons %>
    <div class="d-flex flex-column flex-md-row gap-2 mb-4 plant-bottom-actions-mobile">
      <%= link_to "Edit Plant", edit_plant_path(@plant), class: "btn btn-primary" %>
      <% if @plant.muted? %>
        <%= button_to "Unmute Plant", unmute_plant_path(@plant),
              method: :patch,
              class: "btn btn-success" %>
      <% else %>
        <%= button_to "Mute Plant", mute_plant_path(@plant),
              method: :patch,
              class: "btn",
              style: "background-color: #b38600; border-color: #b38600; color: white;",
              data: { turbo_confirm: "Mute #{@plant.name}? Its tasks will be hidden from the calendar and task list." } %>
      <% end %>
      <%= link_to "Delete Plant", plant_path(@plant),
            class: "btn btn-outline-danger",
            data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this plant and all its tasks?" } %>
      <%= link_to "Create New Plant", new_plant_path, class: "btn btn-success" %>
      <%= link_to "Back to Plants", plants_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <%# Sidebar %>
  <div class="col-lg-4">
    <div class="card bg-light">
      <div class="card-body">
        <h5 class="card-title">Quick Tips</h5>
        <p class="card-text small text-muted">
          Tasks are automatically generated based on your frost date and planting timeline.
          Update the timing information above and regenerate tasks to see changes.
        </p>
      </div>
    </div>
  </div>
</div>
