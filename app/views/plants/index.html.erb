<h1>Plants</h1>

<p>
  <%= link_to "Add a new plant", new_plant_path %>
</p>

<% if @plants.any? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Variety</th>
        <th>Sowing method</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @plants.each do |plant| %>
        <tr>
          <td><%= plant.name %></td>
          <td><%= plant.variety %></td>
          <td><%= plant.sowing_method&.humanize %></td>
          <td>
            <%= link_to "View", plant_path(plant) %> |
            <%= link_to "Edit", edit_plant_path(plant) %> |
            <%= link_to "Delete", plant_path(plant),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No plants yet. <%= link_to "Add one", new_plant_path %>.</p>
<% end %>
