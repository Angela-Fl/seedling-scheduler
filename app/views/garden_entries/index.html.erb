<% content_for :title, "Garden Journal" %>

<div class="container py-4">

  <% if notice.present? %>
    <p class="text-success"><%= notice %></p>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Garden Journal</h1>

    <%= link_to "New journal entry",
                new_garden_entry_path,
                class: "btn btn-success" %>
  </div>

  <div id="garden_entries">
    <% @garden_entries.each do |garden_entry| %>
      <div class="mb-4">
        <%= render garden_entry %>
      </div>
    <% end %>
  </div>

</div>
