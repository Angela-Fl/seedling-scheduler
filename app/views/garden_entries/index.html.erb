<% content_for :title, "Garden entries" %>

<div class="container py-4">

  <% if notice.present? %>
    <p class="text-success"><%= notice %></p>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Garden entries</h1>

    <%= link_to "New journal entry",
                new_garden_entry_path,
                class: "btn btn-success" %>
  </div>

  <div id="garden_entries">
    <% @garden_entries.each do |garden_entry| %>
      <div class="mb-3">
        <%= render garden_entry %>

        <div class="mt-1">
          <%= link_to "Edit this entry",
                      edit_garden_entry_path(garden_entry),
                      class: "btn btn-sm btn-outline-primary" %>
          <%= link_to "Delete this entry",
                      garden_entry_path(garden_entry),
                      class: "btn btn-sm btn-outline-danger",
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this garden entry?" } %>
        </div>
      </div>
    <% end %>
  </div>

</div>
