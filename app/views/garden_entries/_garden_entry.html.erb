<div id="<%= dom_id garden_entry %>" class="card shadow-sm border-0 bg-white position-relative">
  <div class="card-body p-3 p-md-4">
    <div class="position-absolute top-0 end-0 mt-2 me-2 d-flex flex-column flex-md-row gap-2">
      <%= link_to "Edit",
                  edit_garden_entry_path(garden_entry),
                  class: "btn btn-sm btn-outline-primary" %>
      <%= link_to "Delete",
                  garden_entry_path(garden_entry),
                  class: "btn btn-sm btn-outline-danger",
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this garden entry?" } %>
    </div>

    <h4 class="mb-2 pe-5"><%= garden_entry.title %></h4>

    <div class="text-muted small mb-3">
      <%= garden_entry.entry_date.to_fs(:long) %>
    </div>

    <div class="mt-3">
      <%= simple_format(garden_entry.body, {}, sanitize: false) %>
    </div>
  </div>
</div>
