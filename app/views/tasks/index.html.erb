<h1 class="mb-4">Upcoming Seedling Tasks</h1>

<div class="alert alert-secondary" role="alert">
  <strong>Last frost date:</strong> <%= Setting.frost_date.to_fs(:long) %>
  <%= link_to "Edit", edit_settings_path, class: "btn btn-sm btn-outline-primary ms-2" %>
</div>

<% if @tasks.any? %>
  <div class="table-responsive">
    <table class="table table-hover table-striped">
      <thead class="table-dark">
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Task</th>
          <th scope="col">Plant</th>
          <th scope="col">Notes</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.due_date.to_fs(:long) %></td>
            <td>
              <span class="badge bg-<%= task_badge_color(task) %>">
                <%= task.display_name %>
              </span>
            </td>
            <td>
              <strong><%= task.plant.name %></strong><br>
              <small class="text-muted"><%= task.plant.variety %></small>
            </td>
            <td><%= task.notes.presence || task.plant.notes %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">No tasks yet</h4>
    <p>Add some plants to generate tasks, or update your frost date in settings.</p>
  </div>
<% end %>
