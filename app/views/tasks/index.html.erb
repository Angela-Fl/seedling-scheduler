<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Upcoming Seedling Tasks</h1>
  <div class="d-flex align-items-center gap-2">
    <button type="button" class="btn btn-success" onclick="window.dispatchEvent(new CustomEvent('calendar:create', { detail: { date: new Date().toISOString().split('T')[0] } }))">
      + Create Task
    </button>
    <div class="btn-group">
      <%= link_to "Table", tasks_path, class: "btn btn-primary active" %>
      <%= link_to "Calendar", calendar_tasks_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>

<div class="alert alert-secondary" role="alert">
  <strong>Last frost date:</strong> <%= Setting.frost_date.to_fs(:long) %>
  <%= link_to "Edit", edit_settings_path, class: "btn btn-sm btn-primary ms-2" %>
</div>

<% if @tasks.any? %>
  <div class="table-responsive">
    <table class="table table-hover table-striped">
      <thead class="table-dark">
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Task</th>
          <th scope="col">Plant</th>
          <th scope="col">Notes</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr style="cursor: pointer;"
              onclick="<% if task.plant %>window.location.href='<%= plant_path(task.plant) %>'<% else %>window.dispatchEvent(new CustomEvent('calendar:edit', { detail: { id: <%= task.id %>, taskType: '<%= task.task_type %>', plantId: <%= task.plant_id || 'null' %>, notes: <%= task.notes.to_json %>, status: '<%= task.status %>', dueDate: '<%= task.due_date.iso8601 %>' } }))<% end %>">
            <td><%= task.due_date.to_fs(:long) %></td>
            <td>
              <span class="badge" style="background-color: <%= task_badge_color(task)[:bg] %>; color: <%= task_badge_color(task)[:text] %>">
                <%= task.display_name %>
              </span>
            </td>
            <td>
              <% if task.plant %>
                <strong><%= task.plant.name %></strong><br>
                <small class="text-muted"><%= task.plant.variety %></small>
              <% else %>
                <em class="text-muted">General garden task</em>
              <% end %>
            </td>
            <td><%= task.notes.presence || task.plant&.notes %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">No tasks yet</h4>
    <p>Add some plants to generate tasks, or update your frost date in settings.</p>
  </div>
<% end %>

<!-- Task Creation/Edit Modal -->
<%= render 'tasks/task_modal' %>
