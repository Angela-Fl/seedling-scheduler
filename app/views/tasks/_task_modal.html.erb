<div class="modal fade" id="taskModal" tabindex="-1" data-controller="task-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Garden Task</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= form_with model: Task.new,
                    id: "taskForm",
                    data: {
                      "task-modal_target": "form",
                      action: "submit->task-modal#submit"
                    } do |f| %>
        <%= f.hidden_field :task_type, value: "garden_task" %>
        <%= f.hidden_field :plant_id, value: nil %>

        <div class="modal-body">
          <div class="mb-3">
            <%= f.label :due_date, "Due Date", class: "form-label" %>
            <%= f.date_field :due_date,
                            class: "form-control",
                            required: true,
                            data: { "task-modal_target": "dateInput" } %>
          </div>

          <div class="mb-3">
            <%= f.label :notes, "Task Description", class: "form-label" %>
            <%= f.text_area :notes,
                           rows: 3,
                           class: "form-control",
                           placeholder: "What needs to be done?",
                           data: { "task-modal_target": "notesInput" } %>
          </div>

          <div class="mb-3">
            <%= f.label :status, "Status", class: "form-label" %>
            <%= f.select :status,
                        options_for_select(Task.statuses.keys.map { |k| [k.humanize.titleize, k] }, "pending"),
                        {},
                        class: "form-select",
                        required: true,
                        data: { "task-modal_target": "statusSelect" } %>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= f.submit "Save Task", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
