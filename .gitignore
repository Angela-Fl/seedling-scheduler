# Ignore bundler config
/.bundle

# Ignore local Rails/Tailwind build output
/app/assets/builds/
/app/assets/.sprockets-manifest-*

# Ignore logs
/log/*
!/log/.keep

# Ignore temporary files
/tmp/*
!/tmp/.keep

# Ignore storage (for Active Storage local)
 /storage/*
!/storage/.keep

# Ignore Uploaded files in test environments
/test/files

# Ignore SQLite databases (if you're using SQLite)
*.sqlite3
*.sqlite3-journal

# Ignore credentials (should never commit these)
config/master.key
config/credentials.yml.enc

# Node/Yarn dependencies
/node_modules/

# Public packs (Webpacker) — safe even if you don’t use Webpacker
/public/packs/
/public/packs-test/

# Ignore coverage reports (SimpleCov)
coverage/

# Ignore byebug history
.byebug_history

# Ignore dotenv environment variables
.env
.env.*.local

# Ignore OS-generated files
.DS_Store
Thumbs.db

# Ignore Vim/Editor swap files
*.swp
*.swo
*~

# Vite Ruby
/public/vite*
node_modules
# Vite uses dotenv and suggests to ignore local-only env files. See
# https://vitejs.dev/guide/env-and-mode.html#env-files
*.local

